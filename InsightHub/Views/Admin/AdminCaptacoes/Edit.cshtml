@using InsightHub.Models;
@{
    ViewData["Title"] = "Edição de Captações de Recursos";
    Layout = "_LayoutUnscoped";
}
<div class="insert-form">
    <link rel="stylesheet" href="~/admin/css/main.css" asp-append-version="true" />
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            font-size: 2em;
            color: white;
        }
        h1{
            font-size: 2.5em;
            display: flex;
            justify-content: space-around;
        }
        form {
            max-width: 400px;
            margin: auto;
            display: grid;
            justify-items: center;
        }
        label {
            display: flex;
            margin-top: 10px;
        }
        input[type="text"], input[type="date"], input[type="email"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 3px black solid;
            border-radius: 10px;
        }
        button {
            margin-top: 15px;
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        select {
            width: 100%;
            height: 40px;
            border-radius: 10px;
            top: 14px;
            right: 10px;
            background-color: transparent;
            border: 2px black solid;
        }

    </style>

        <h1>Edição de Captações de Recursos</h1>
        <br>
        <form action="@(ViewBag.Captacao != null ? "/gerenciador/captacoes/edit-form/"+ViewBag.Captacao.Id : "/gerenciador/captacoes/edit-form")"
        enctype="multipart/form-data" method="post">
             <label for="projeto_vinculado">Projetos:</label>
                <select id="projeto_vinculado" name="ProjetoId" required>
                    @foreach (Projeto projeto in ViewBag.Projetos){
                        if (ViewBag.Captacao != null && ViewBag.Captacao.ProjetoId == projeto.Id){
                            <option value="@projeto.Id" selected>@projeto.Nome</option>
                        }else{
                            <option value="@projeto.Id">@projeto.Nome</option>
                        }
                    }
                </select>

            <label for="valor">Valor:</label>
            <input type="number" id="valor" name="valor" value="@(ViewBag.Captacao != null ? ViewBag.Captacao.Valor : null)" required>

            <label for="data">Data:</label>
            <input type="date" id="data" name="data" value="@(ViewBag.Captacao != null ? ViewBag.Captacao.Data.ToString("yyyy-MM-dd") : null)" required>

            <label for="descricao">Descriçao:</label>
            <input type="text" id="descricao" name="descricao" value="@(ViewBag.Captacao != null ? ViewBag.Captacao.Descricao : null)">

            <label for="fornecedor">Fornecedor:</label>
            <input type="text" id="fornecedor" name="fornecedor" value="@(ViewBag.Captacao != null ? ViewBag.Captacao.Fornecedor : null)">

            <button type="submit" class="button button--add">Cadastrar</button>
        </form>
</div>